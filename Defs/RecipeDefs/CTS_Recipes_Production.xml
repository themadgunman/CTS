        <filter>
          <thingDefs>
            <li>MedicineIndustrial</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <products>
      <CTSNanoTechMedicine>1</CTSNanoTechMedicine>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>CTSBloodBag</li>
        <li>ComponentSpacer</li>
        <li>MedicineIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
  
  
  
  
