    <jobString>Creating Nano-tech Medicine.</jobString>
    <workAmount>2000</workAmount>
    <workSkill>Medicine</workSkill>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <soundWorking>Recipe_Tailor</soundWorking>
    <recipeUsers>
      <li>CTSAdvancedMedicineLab</li>
    </recipeUsers>
    <skillRequirements>
      <Medicine>15</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CTSBloodBag</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
