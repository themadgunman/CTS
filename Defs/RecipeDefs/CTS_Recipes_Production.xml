  <!--================================= make glitter med =================================-->

  <RecipeDef>
    <defName>CTSMakeGlitterMedicine</defName>
    <label>Make Glitterworld Medicine</label>
    <description>Combine Medical Kits, Blood bags and Bandages to create a higher quality medical kit.</description>
    <jobString>Creating Glitter world medical pack.</jobString>
    <workAmount>2000</workAmount>
    <workSkill>Medicine</workSkill>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <soundWorking>Recipe_Tailor</soundWorking>
    <recipeUsers>
      <li>CTSAdvancedMedicineLab</li>
    </recipeUsers>
    <skillRequirements>
      <Medicine>10</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CTSBloodBag</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>CTSBandage</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineIndustrial</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <products>
      <MedicineUltratech>1</MedicineUltratech>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>CTSBloodBag</li>
        <li>CTSBandage</li>
        <li>MedicineIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
  
  <!--================================= make nano med =================================-->

  <RecipeDef>
    <defName>CTSMakeNanoTechMedicine</defName>
    <label>Make Nano-tech Medicine</label>
