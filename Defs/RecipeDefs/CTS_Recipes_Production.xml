<Defs>

<!--================================= make bandage =================================--> 
  
  <RecipeDef>
    <defName>CTSMakeBandage</defName>
    <label>Make Bandages</label>
    <description>Sterilize cloth to create bandages.</description>
    <jobString>Creating Bandages.</jobString>
    <workAmount>500</workAmount>
    <workSkill>Medicine</workSkill>
    <workSpeedStat>MedicalOperationSpeed</workSpeedStat>
    <soundWorking>Recipe_Tailor</soundWorking>
    <recipeUsers>
      <li>HandTailoringBench</li>
      <li>ElectricTailoringBench</li>
      <li>CTSAdvancedMedicineLab</li>
    </recipeUsers>
    <skillRequirements>
      <Medicine>2</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Cloth</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      
    </ingredients>
    <products>
      <CTSBandage>1</CTSBandage>
    </products>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Cloth</li>
     
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
  
